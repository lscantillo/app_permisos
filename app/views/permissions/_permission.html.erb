<div id="<%= dom_id permission %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Model:</strong>
    <%= permission.model %>
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= permission.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this permission", permission, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this permission', edit_permission_path(permission), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
